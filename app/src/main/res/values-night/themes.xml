<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SGOApp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_dark_background</item>
        <item name="postSplashScreenTheme">@style/Theme.SGOApp</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>

    <style name="Theme.SGOApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@null</item>
        <item name="android:windowLightStatusBar">false</item>


        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_dark_outlineVariant</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_dark_inverseSurface</item>
        <item name="colorGoodGrade">@color/dark_good_grade</item>
        <item name="colorOnGoodGrade">@color/dark_on_good_grade</item>
        <item name="colorGoodGradeContainer">@color/dark_good_grade_container</item>
        <item name="colorOnGoodGradeContainer">@color/dark_on_good_grade_container</item>
        <item name="harmonizeGoodGrade">false</item>
        <item name="colorMidGrade">@color/dark_mid_grade</item>
        <item name="colorOnMidGrade">@color/dark_on_mid_grade</item>
        <item name="colorMidGradeContainer">@color/dark_mid_grade_container</item>
        <item name="colorOnMidGradeContainer">@color/dark_on_mid_grade_container</item>
        <item name="harmonizeMidGrade">false</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_inversePrimary</item>

        <item name="android:textColorLink">@color/md_theme_dark_primary</item>

    </style>

    <style name="snackBarStyle" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">?attr/colorOnBackground</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
    </style>

    <style name="goodGradeText" parent="gradeText">
        <item name="android:textColor">?attr/colorGoodGrade</item>
    </style>

    <style name="midGradeText" parent="gradeText">
        <item name="android:textColor">?attr/colorMidGrade</item>
    </style>

    <style name="badGradeText" parent="gradeText">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="Widget.SGOApp.BottomBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
    </style>
</resources>
