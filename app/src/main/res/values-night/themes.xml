<resources>

    <style name="Theme.SGOApp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/darkBackground</item>
        <item name="postSplashScreenTheme">@style/Theme.SGOApp</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>

    <style name="Theme.SGOApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryVariant">@color/darkPrimary</item>
        <item name="colorSecondary">@color/darkSecondary</item>
        <item name="backgroundColor">@color/darkBackground</item>

        <item name="colorSurface">@color/darkSurface</item>
        <item name="colorError">@color/badGrade</item>
        <item name="colorOnPrimary">@color/darkBackground</item>
        <item name="colorOnBackground">@color/lightBackground</item>
        <item name="colorOnSurface">@color/lightBackground</item>
        <item name="colorOnError">@color/lightBackground</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>

        <item name="android:textColorLink">@color/darkPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>


        <item name="colorGoodGrade">@color/goodGrade</item>
        <item name="colorMidGrade">@color/midGrade</item>
        <item name="colorBadGrade">@color/badGrade</item>
    </style>

    <style name="snackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">?attr/colorOnBackground</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
    </style>

    <style name="goodGradeText" parent="gradeText">
        <item name="android:textColor">?attr/colorGoodGrade</item>
    </style>

    <style name="midGradeText" parent="gradeText">
        <item name="android:textColor">?attr/colorMidGrade</item>
    </style>

    <style name="badGradeText" parent="gradeText">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="bottomBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
    </style>
</resources>
