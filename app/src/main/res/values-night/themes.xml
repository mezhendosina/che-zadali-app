<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="sgoAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_primary_blue</item>
        <item name="colorSecondary">@color/dark_main_text</item>
        <item name="colorSecondaryVariant">@color/dark_main_text</item>
        <item name="colorOnSecondary">@color/dark_caption</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_background</item>
        <item name="colorError">@color/dark_second_grade</item>
        <item name="colorOnBackground">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:background">@color/dark_background</item>

    </style>

    <style name="FAB">
        <item name="backgroundTint">@color/dark_primary_blue</item>
    </style>

    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark_primary_blue</item>
        <item name="hintTextColor">@color/dark_primary_blue</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
    </style>

    <style name="SecondaryTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_primary_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Caption" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_main_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Caption1" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Header" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Header1" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_main_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainTextView">
        <item name="android:textColor">@color/dark_main_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="SettingsTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/dark_main_text</item>
        <item name="android:textSize">16sp</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">16dp</item>
        <item name="iconTint">@color/dark_main_text</item>
        <item name="android:elegantTextHeight">true</item>
    </style>


    <style name="BottomSheetAppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/dark_background</item>
    </style>
</resources>