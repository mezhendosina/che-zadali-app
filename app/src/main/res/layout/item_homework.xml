<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    style="@style/onCard"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:elevation="0dp"
    android:isScrollContainer="false"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/lesson_number"
        style="@style/lesson_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transperent"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="@id/lesson_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="1" />

    <TextView
        android:id="@+id/lesson_name"
        style="@style/mainText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@color/transperent"
        app:layout_constraintEnd_toStartOf="@id/attachmentsIcon"
        app:layout_constraintStart_toEndOf="@id/lesson_number"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="Литература" />

    <TextView
        android:id="@+id/lesson_time"
        style="@style/captions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transperent"
        app:layout_constraintStart_toStartOf="@id/lesson_name"
        app:layout_constraintTop_toBottomOf="@id/lesson_name"
        tool:text="8:00 - 8:40" />

    <ImageView
        android:id="@+id/attachmentsIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/transperent"
        android:contentDescription="@string/contain_attachments"
        android:rotation="90"
        android:src="@drawable/ic_attachment"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/homework"
        app:layout_constraintEnd_toStartOf="@id/grades"
        app:layout_constraintTop_toTopOf="@id/lesson_name"
        app:tint="?attr/colorOnBackground" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grades"
        style="@style/lesson_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transperent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:itemCount="1"
        tool:listitem="@layout/item_why_grade" />

    <TextView
        android:id="@+id/homework"
        style="@style/mainText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:autoLink="all"
        android:background="@color/transperent"
        android:ellipsize="end"
        android:linksClickable="true"
        android:maxLines="3"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/attachmentsIcon"
        app:layout_constraintStart_toStartOf="@id/lesson_name"
        app:layout_constraintTop_toBottomOf="@id/lesson_time"
        tool:text="Выучить все" />
</androidx.constraintlayout.widget.ConstraintLayout>