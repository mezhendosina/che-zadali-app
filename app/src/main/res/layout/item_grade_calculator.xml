<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.slider.Slider
        android:id="@+id/calculator_slider"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:stepSize="0"
        android:valueFrom="2.01"
        android:valueTo="4.99"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/calculated_grade"
        layout="@layout/item_grade_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/calculator_slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/calculator_slider"
        app:layout_constraintTop_toTopOf="@id/calculator_slider" />

    <TextView
        android:id="@+id/req_five_count_header"
        style="@style/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/five_grade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculator_slider" />

    <TextView
        android:id="@+id/req_five_count"
        style="@style/gradeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|end"
        app:layout_constraintBottom_toBottomOf="@id/req_five_count_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/req_five_count_header"
        app:layout_constraintTop_toTopOf="@id/req_five_count_header"
        tools:text="3" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/five_or_four_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/req_five_count_header" />

    <TextView
        android:id="@+id/five_or_four"
        style="@style/captions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="?attr/backgroundColor"
        android:paddingHorizontal="12dp"
        android:text="@string/or"
        app:layout_constraintBottom_toBottomOf="@id/five_or_four_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/five_or_four_divider" />

    <TextView
        android:id="@+id/req_four_count_header"
        style="@style/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/four_grade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/five_or_four" />

    <TextView
        android:id="@+id/req_four_count"
        style="@style/gradeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|end"
        app:layout_constraintBottom_toBottomOf="@id/req_four_count_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/req_four_count_header"
        app:layout_constraintTop_toTopOf="@id/req_four_count_header"
        tools:text="3" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/four_or_three_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/req_four_count_header" />

    <TextView
        android:id="@+id/four_or_three"
        style="@style/captions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="?attr/backgroundColor"
        android:paddingHorizontal="12dp"
        android:text="@string/or"
        app:layout_constraintBottom_toBottomOf="@id/four_or_three_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/four_or_three_divider" />

    <TextView
        android:id="@+id/req_three_count_header"
        style="@style/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/three_grade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/four_or_three" />

    <TextView
        android:id="@+id/req_three_count"
        style="@style/gradeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|end"
        app:layout_constraintBottom_toBottomOf="@id/req_three_count_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/req_three_count_header"
        app:layout_constraintTop_toTopOf="@id/req_three_count_header"
        tools:text="3" />

    <TextView
        android:id="@+id/too_many_grades_error"
        style="@style/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/too_many_grades"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculator_slider" />

</androidx.constraintlayout.widget.ConstraintLayout>