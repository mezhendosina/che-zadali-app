<resources>

    <style name="Theme.SGOApp." parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryVariant">@color/lightPrimary</item>
        <item name="colorSecondary">@color/lightSecondary</item>
        <item name="backgroundColor">@color/lightBackground</item>

        <item name="colorSurface">@color/lightSurface</item>
        <item name="colorError">@color/badGrade</item>
        <item name="colorOnPrimary">@color/lightBackground</item>
        <item name="colorOnBackground">@color/lightTextColor</item>
        <item name="colorOnSurface">@color/lightTextColor</item>
        <item name="colorOnError">@color/lightTextColor</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>

        <item name="android:textColorLink">@color/lightPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>


        <item name="colorGoodGrade">@color/goodGrade</item>
        <item name="colorMidGrade">@color/midGrade</item>
        <item name="colorBadGrade">@color/badGrade</item>
    </style>

    <style name="recycler_view">
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="mainScreenHeaders" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="expandedToolBarText" parent="mainScreenHeaders">
        <item name="android:textSize">36sp</item>
    </style>


    <style name="announcementsToolBarText" parent="mainScreenHeaders">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fab" parent="">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="MaterialCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>


    <style name="lesson_number">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="mainText" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="captions" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="captions.gray" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="dark_captions" parent="captions">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>


    <style name="AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="onCard">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="ButtonIconOnly" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconPadding">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>


        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">0dp</item>

        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="snackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">?attr/colorOnBackground</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
    </style>

    <style name="settingsTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="expandedHintEnabled">false</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="settingsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:gravity">start|center_vertical</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/mainText</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">32dp</item>
        <item name="iconTint">?attr/colorOnBackground</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/modalButtonSheet</item>
    </style>

    <style name="modalButtonSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">?attr/backgroundColor</item>
        <item name="shapeAppearance">@style/ButtonSheetShape</item>
    </style>

    <style name="ButtonSheetShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="gradeText">
        <item name="fontFamily">@font/roboto_serif</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="goodGradeText" parent="gradeText">
        <item name="android:textColor">@color/goodGrade</item>
    </style>

    <style name="midGradeText" parent="gradeText">
        <item name="android:textColor">?attr/colorMidGrade</item>
    </style>

    <style name="badGradeText" parent="gradeText">
        <item name="android:textColor">?attr/colorError</item>
    </style>

</resources>
