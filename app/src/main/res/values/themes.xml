<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SGOApp." parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorSecondary">@color/main_text</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSecondaryVariant">@color/main_text</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="colorError">@color/second_grade</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="materialCardViewStyle">@style/MaterialCardView</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorLink">@color/primary_blue</item>
        <item name="android:background">@color/backgroundWhite</item>
        <item name="colorOnBackground">#424242</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:titleTextColor">@color/main_text</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="recycler_view">
        <item name="android:background">@color/white</item>
    </style>

    <style name="mainScreenHeaders" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="expandedToolBarText" parent="">
        <item name="android:textSize">32sp</item>
        <item name="expandedTitleTextColor">@color/main_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="fab" parent="">
        <item name="android:backgroundTint">@color/primary_blue</item>
    </style>

    <style name="MaterialCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:background">@color/white</item>
    </style>

    <style name="lesson_number">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="mainText" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="captions" parent="mainText">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="dark_captions" parent="captions">
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="ButtonIconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="onCard">
        <item name="android:background">@color/white</item>
    </style>
</resources>