<resources>
    <dimen name="image_width">120dp</dimen>
    <dimen name="image_final_width">32dp</dimen>
    <dimen name="spacing_normal">16dp</dimen>

    <style name="Theme.SGOApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outline_variant</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorGoodGrade">@color/light_good_grade</item>
        <item name="colorOnGoodGrade">@color/light_on_good_grade</item>
        <item name="colorGoodGradeContainer">@color/light_good_grade_container</item>
        <item name="colorOnGoodGradeContainer">@color/light_on_good_grade_container</item>
        <item name="harmonizeGoodGrade">false</item>
        <item name="colorMidGrade">@color/light_mid_grade</item>
        <item name="colorOnMidGrade">@color/light_on_mid_grade</item>
        <item name="colorMidGradeContainer">@color/light_mid_grade_container</item>
        <item name="colorOnMidGradeContainer">@color/light_on_mid_grade_container</item>
        <item name="harmonizeMidGrade">false</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <!--        <item name="android:textColorLink">@color/md_theme_light_primary</item>-->
        <!--        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>-->
        <item name="textAppearanceBodyLarge">@style/mainText</item>
        <item name="textAppearanceBodySmall">@style/captions</item>
        <item name="textAppearanceTitleSmall">@style/captions.headers</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.SGOApp.Login.Title</item>
        <item name="bottomSheetStyle">@style/ThemeOverlay.SGOApp.BottomSheetDialog</item>
    </style>


    <style name="recycler_view">
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.SGOApp.FAB" parent="ThemeOverlay.Material3.FloatingActionButton.Primary">
        <item name="iconSize">32dp</item>
    </style>

    <style name="MaterialCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="AppBarLayout" parent="Widget.Material3.AppBarLayout" />


    <!-- FONTS -->

    <style name="TextAppearance.SGOApp.Journal.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="TextAppearance.SGOApp.Login.Title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainScreenHeaders" parent="TextAppearance.Material3.TitleLarge" />

    <style name="specialThanksHeader" parent="mainScreenHeaders">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="expandedToolBarText" parent="mainScreenHeaders">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="announcementsToolBarText" parent="mainScreenHeaders">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="lesson_number" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="mainText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="captions" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="captions.headers" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="captions.dark" parent="captions">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textIsSelectable">false</item>
    </style>


    <style name="gradeText">
        <item name="fontFamily">@font/roboto_serif</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>

    <style name="goodGradeText" parent="gradeText">
        <item name="android:textColor">@color/light_good_grade</item>
    </style>

    <style name="midGradeText" parent="gradeText">
        <item name="android:textColor">?attr/colorMidGrade</item>
    </style>

    <style name="badGradeText" parent="gradeText">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="TextAppearance.SGOApp.Lesson.Title" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="TextAppearance.SGOApp.Journal.Lesson.Title" parent="TextAppearance.SGOApp.Lesson.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SGOApp.Grades.Lesson.Title" parent="TextAppearance.SGOApp.Lesson.Title" />

    <!-- BUTTONS -->

    <style name="Widget.SGOApp.Button." parent="@style/Widget.Material3.Button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <style name="Widget.SGOApp.Button.Secondary" parent="@style/Widget.Material3.Button.TonalButton.Icon">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <style name="Widget.SGOApp.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconSize">24dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>


    <style name="Widget.SGOApp.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeWidth">0dp</item>
    </style>


    <style name="Widget.SGOApp.Button.Settings" parent="@style/Widget.Material3.Button.TextButton">
        <item name="android:gravity">start|center_vertical</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/mainText</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="iconGravity">start</item>
        <item name="iconSize">24dp</item>
        <item name="iconPadding">32dp</item>
        <item name="backgroundColor">?attr/colorSurface</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconTint">?attr/colorOnBackground</item>
    </style>


    <style name="Widget.SGOApp.Button.Login" parent="@style/Widget.SGOApp.Button.Secondary">
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textEnd</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
    </style>

    <!--  CARDS  -->

    <style name="Widget.SGOApp.OnCardView" parent="">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.SGOApp.CardView." parent="Widget.Material3.CardView.Elevated">

    </style>

    <style name="Widget.SGOApp.CardView" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="Widget.SGOApp.CardView.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:minHeight">60dp</item>
        <item name="cardBackgroundColor">?attr/colorSecondaryContainer</item>
    </style>


    <!--  TEXT FIELDS  -->
    <style name="Widget.SGOApp.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
    </style>


    <style name="Widget.SGOApp.BottomBar" parent="Widget.Material3.BottomNavigationView" />


    <style name="snackBarStyle" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">?attr/colorOnBackground</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
    </style>

    <style name="settingsTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="settingsButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:gravity">start|center_vertical</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/mainText</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">32dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="iconTint">?attr/colorOnBackground</item>
    </style>

    <style name="ThemeOverlay.SGOApp.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/modalButtonSheet</item>
    </style>

    <style name="ThemeOverlay.SGOApp.TopBar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="elevationOverlayEnabled">false</item>
    </style>


    <style name="modalButtonSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">?attr/backgroundColor</item>
        <item name="behavior_fitToContents">true</item>
        <item name="shapeAppearance">@style/ButtonSheetShape</item>
    </style>

    <style name="ButtonSheetShape" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="settingsButton.withCaption">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="TopBarAddons" parent="Widget.Material3.Toolbar.Surface">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="Widget.SGOapp.Lesson.Emoji" parent="">
        <item name="android:background">@drawable/shape_lesson_emoji</item>
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:padding">6dp</item>
    </style>

</resources>
