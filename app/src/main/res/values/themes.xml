<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="sgoAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorSecondary">@color/main_text</item>
        <item name="colorSecondaryVariant">@color/main_text</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="colorError">@color/second_grade</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:titleTextColor">@color/main_text</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="FAB">
        <item name="backgroundTint">@color/primary_blue</item>
    </style>

    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="hintTextColor">@color/primary_blue</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
    </style>

    <style name="SecondaryTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Caption" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Caption1" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Header" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainFragmentHeaders" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="LessonName" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Header1" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainTextView">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="SettingsTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">16sp</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">16dp</item>
        <item name="iconTint">@color/main_text</item>
        <item name="android:elegantTextHeight">true</item>
    </style>

    <style name="MessagesButton">
        <item name="rippleColor">@color/main_text</item>
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">1dp</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/main_text</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="deleteMessageButton" parent="MessagesButton">
        <item name="iconTint">@color/second_grade</item>
        <item name="android:textColor">@color/second_grade</item>
    </style>

    <style name="BottomSheetAppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/main_text</item>
        <item name="iconTint">@color/main_text</item>
        <item name="elevation">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemBackground">@color/transperent</item>
    </style>
</resources>