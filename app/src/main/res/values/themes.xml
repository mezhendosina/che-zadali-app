<resources>

    <style name="Theme.SGOApp." parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="backgroundColor">@color/backgroundWhite</item>

        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorOnError">@color/onError</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>

        <item name="android:textColorLink">@color/primaryDarkColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="snackbarStyle">@style/snackBarStyle</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="recycler_view">
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="mainScreenHeaders" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="expandedToolBarText" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="announcementsToolBarText" parent="mainScreenHeaders">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fab" parent="">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="MaterialCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">16dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>


    <style name="lesson_number">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="mainText" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="captions" parent="mainText">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="dark_captions" parent="captions">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>


    <style name="AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="onCard">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="ButtonIconOnly" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconPadding">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>


        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">0dp</item>

        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="snackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">?attr/colorOnBackground</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnSurface">@color/onSurface</item>
    </style>

    <style name="settingsTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="expandedHintEnabled">false</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="settingsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:gravity">start|center_vertical</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/mainText</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">32dp</item>
        <item name="iconTint">?attr/colorOnBackground</item>
    </style>

</resources>